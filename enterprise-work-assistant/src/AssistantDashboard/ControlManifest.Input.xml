<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="EnterpriseWorkAssistant"
           constructor="AssistantDashboard"
           version="1.0.0"
           display-name-key="AssistantDashboard_DisplayName"
           description-key="AssistantDashboard_Description"
           control-type="virtual">

    <!-- Dataset: bound to AssistantCards Dataverse table in Canvas app -->
    <data-set name="cardDataset" display-name-key="CardDataset_DisplayName" cds-data-set-options="displayCommandBar:false;displayViewSelector:false;displayQuickFind:false">
    </data-set>

    <!-- Input properties: filter state pushed from Canvas app -->
    <property name="filterTriggerType"
              display-name-key="FilterTriggerType_DisplayName"
              description-key="FilterTriggerType_Description"
              of-type="SingleLine.Text"
              usage="input"
              required="false" />

    <property name="filterPriority"
              display-name-key="FilterPriority_DisplayName"
              description-key="FilterPriority_Description"
              of-type="SingleLine.Text"
              usage="input"
              required="false" />

    <property name="filterCardStatus"
              display-name-key="FilterCardStatus_DisplayName"
              description-key="FilterCardStatus_Description"
              of-type="SingleLine.Text"
              usage="input"
              required="false" />

    <property name="filterTemporalHorizon"
              display-name-key="FilterTemporalHorizon_DisplayName"
              description-key="FilterTemporalHorizon_Description"
              of-type="SingleLine.Text"
              usage="input"
              required="false" />

    <!-- Output properties: events fired back to Canvas app -->
    <property name="selectedCardId"
              display-name-key="SelectedCardId_DisplayName"
              description-key="SelectedCardId_Description"
              of-type="SingleLine.Text"
              usage="output" />

    <property name="sendDraftAction"
              display-name-key="SendDraftAction_DisplayName"
              description-key="SendDraftAction_Description"
              of-type="SingleLine.Text"
              usage="output" />

    <property name="copyDraftAction"
              display-name-key="CopyDraftAction_DisplayName"
              description-key="CopyDraftAction_Description"
              of-type="SingleLine.Text"
              usage="output" />

    <property name="dismissCardAction"
              display-name-key="DismissCardAction_DisplayName"
              description-key="DismissCardAction_Description"
              of-type="SingleLine.Text"
              usage="output" />

    <property name="jumpToCardAction"
              display-name-key="JumpToCardAction_DisplayName"
              description-key="JumpToCardAction_Description"
              of-type="SingleLine.Text"
              usage="output" />

    <!-- Platform libraries: share the platform React tree (virtual control) -->
    <platform-library name="React" version="16.14.0" />
    <platform-library name="Fluent" version="9.46.2" />

    <resources>
      <code path="index.ts" order="1" />
      <css path="styles/AssistantDashboard.css" order="1" />
      <resx path="strings/AssistantDashboard.1033.resx" version="1.0.0" />
    </resources>
  </control>
</manifest>
